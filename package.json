{
  "name": "product-database",
  "version": "1.0.0",
  "description": "Data for the domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.copm"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:database && npm run build:docker",
    "build:docker": "docker build --tag erpmicroservices/products-database --rm .",
    "build:database": "mkdir -p build && cat sql/V_prod*.sql > build/database_up.sql",
    "clean": "rm -rf build && rm -rf generated-sql && yes | docker rmi --force erpmicroservices/products-database && yes | docker volume prune && docker rm products-database",
    "migrate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-products} -user=${DB_USER:-products} -password=${DB_PASSWORD:-products} migrate",
    "migrate:info": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-products} -user=${DB_USER:-products} -password=${DB_PASSWORD:-products} info",
    "migrate:validate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-products} -user=${DB_USER:-products} -password=${DB_PASSWORD:-products} validate",
    "push": "docker push erpmicroservices/products-database:latest",
    "start": "docker run --publish 5432:5432 --name products-database erpmicroservices/products-database",
    "test": "cucumber-js --tags @party_database  --require-module @babel/register --require-module @babel/polyfill  -r ./features ../products-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/products-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/products-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/products-database#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^4.3.0",
    "cucumber": "^7.0.0-rc.0",
    "dotenv": "^16.0.3",
    "node-flywaydb": "^3.0.7",
    "pg-promise": "^10.9.2"
  }
}
